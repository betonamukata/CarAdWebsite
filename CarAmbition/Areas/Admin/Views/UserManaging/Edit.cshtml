@model CarAmbition.Models.NguoiDung

@{
    ViewBag.Title = "Edit";
    Layout = "~/Areas/Admin/Views/AdminLayout/AdminLayout.cshtml";
}

<h2>Chỉnh sửa quyền</h2>

@using (Html.BeginForm("Edit", "UserManaging", FormMethod.Post))
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true)
        <div class="form-group">
            <div class="col-md-10">
                <span>Tài Khoản:</span>
                <span>@Model.TaiKhoan</span>
                @Html.Hidden("TaiKhoan", Model.TaiKhoan)
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-10">
                <span>Tên Quyền:</span>
                @Html.DropDownList("MaQuyen")
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-default" />
                @Html.ActionLink("Quay trở lại", "UserManaging", new { page = ViewBag.page })
            </div>
        </div>
    </div>
}

