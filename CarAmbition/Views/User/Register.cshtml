@model CarAmbition.Models.NguoiDung

@{
    ViewBag.Title = "Register";
    Layout = "~/Views/UserLayout/UserLayout.cshtml";
}

@section tab {
    <style>
        #slider {
            display: none;
        }

        .main-content {
            float: left;
            width: 68%;
            margin-left: 75px;
            border-top: 1px solid #ddd;
            border-left: 1px solid #ddd;
            border-right: 1px solid #ddd;
            border-bottom: 1px solid #ddd;
            border-radius: 0px 0px 5px 5px;
            padding-bottom: 14px;
        }

        .title {
            margin-left: 10px;
        }

        .left-column {
            float: left;
            width: 47%;
            margin-left: 20px;
        }

        .right-column {
            float: right;
            width: 49%;
            margin-right: 20px;
        }

        #rowitem label {
            text-align: left;
            margin-right: -10px;
            margin-bottom: 20px;
            width: 30%;
        }

        .col-md-10 {
            width: 47%;
        }

        #valid {
            color: #ff0000;
        }

        #btnSubmit {
            color: #ffffff;
            background-color: #04470c;
            float: right;
            font-size: large;
            margin-right: -355px;
        }
    </style>
    <div class="main-content">
        <div class="title">
            <h2>Điền thông tin của bạn</h2>
        </div>

        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            <div class="form-horizontal">
                <hr />
                @Html.ValidationSummary(true)
                <div class="left-column">
                    <div class="form-group" id="rowitem">
                        @Html.LabelFor(model => model.TaiKhoan, new { @class = "control-label col-md-2" })
                        <div class="col-md-10">
                            @Html.EditorFor(model => model.TaiKhoan)
                            <br />
                            <span id="valid">@Html.ValidationMessageFor(model => model.TaiKhoan)</span>
                        </div>
                    </div>

                    <div class="form-group" id="rowitem">
                        @Html.LabelFor(model => model.MatKhau, new { @class = "control-label col-md-2" })
                        <div class="col-md-10">
                            @Html.EditorFor(model => model.MatKhau)
                            <br />
                            <span id="valid">@Html.ValidationMessageFor(model => model.MatKhau)</span>
                        </div>
                    </div>

                    <div class="form-group" id="rowitem">
                        @Html.LabelFor(model => model.XacNhanMatKhau, new { @class = "control-label col-md-2" })
                        <div class="col-md-10">
                            @Html.EditorFor(model => model.XacNhanMatKhau)
                            <br />
                            <span id="valid">@Html.ValidationMessageFor(model => model.XacNhanMatKhau)</span>
                        </div>
                    </div>
                </div>
                <div class="right-column">
                    <div class="form-group" id="rowitem">
                        @Html.LabelFor(model => model.HoTen, new { @class = "control-label col-md-2" })
                        <div class="col-md-10">
                            @Html.EditorFor(model => model.HoTen)
                            <br />
                            <span id="valid">@Html.ValidationMessageFor(model => model.HoTen)</span>
                        </div>
                    </div>

                    <div class="form-group" id="rowitem">
                        @Html.LabelFor(model => model.DienThoai, new { @class = "control-label col-md-2" })
                        <div class="col-md-10">
                            @Html.EditorFor(model => model.DienThoai)
                            <br />
                            <span id="valid">@Html.ValidationMessageFor(model => model.DienThoai)</span>
                        </div>
                    </div>

                    <div class="form-group" id="rowitem">
                        @Html.LabelFor(model => model.Email, new { @class = "control-label col-md-2" })
                        <div class="col-md-10">
                            @Html.EditorFor(model => model.Email)
                            <br />
                            <span id="valid">@Html.ValidationMessageFor(model => model.Email)</span>
                        </div>
                    </div>

                    <div class="form-group" id="rowitem">
                        @Html.LabelFor(model => model.DiaChi, new { @class = "control-label col-md-2" })
                        <div class="col-md-10">
                            @Html.TextAreaFor(model => model.DiaChi, new { cols = 40, @rows = 3 })
                            <br />
                            <span id="valid">@Html.ValidationMessageFor(model => model.DiaChi)</span>
                        </div>
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10" id="button">
                        <input type="submit" id="btnSubmit" value="ĐĂNG KÝ" class="btn btn-default" />
                    </div>
                </div>
            </div>
        }
    </div>
}
