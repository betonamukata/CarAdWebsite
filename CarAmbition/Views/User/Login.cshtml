@model CarAmbition.Models.UserLogin

@{
    ViewBag.Title = "Login";
    Layout = "~/Views/UserLayout/UserLayout.cshtml";
}

@section tab
{
    <style>
        .title {
            background-color: #04470c;
            text-align: center;
            color: #ffffff;
        }

        #slider {
            display: none;
        }

        .main-content {
            float: left;
            width: 68%;
            display: inline-block;
            margin-left: 75px;
        }

        .guide {
            background-image: url("/Content/Image/bg-upload-area1.png");
            width: 120px;
            height: 90px;
            position: relative;
            cursor: pointer;
            display: inline-block;
        }

        #btn {
            cursor: pointer;
            height: 100%;
            position: absolute;
            top: 0;
            right: 0;
            opacity: 0;
            -moz-opacity: 0;
        }

        #result {
            margin-top: 100px;
        }

            #result div {
                margin-top: 30px;
            }

        .button {
            float: right;
        }

        .btn {
            background-color: #04470c;
            color: #ffffff;
            font-size: large;
        }

        #submitbutton {
            margin-left: 10px;
            padding-left: 25px;
            padding-right: 25px;
        }

        .form-horizontal {
            margin-left: 350px;
        }
    </style>
    <div class="main-content">        
        @using (Html.BeginForm("Login", "User", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post))
        {
            @Html.AntiForgeryToken()
            <h2 style="text-align:center">TRANG ĐĂNG NHẬP</h2>
            <div class="form-horizontal">
                @Html.ValidationSummary(true)

                <div class="form-group" id="rowitem">
                    @Html.LabelFor(model => model.TaiKhoan, new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.TextBoxFor(model => model.TaiKhoan)
                        @Html.ValidationMessageFor(model => model.TaiKhoan)
                    </div>
                </div>

                <div class="form-group" id="rowitem">
                    @Html.LabelFor(model => model.MatKhau, new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.PasswordFor(model => model.MatKhau)
                        @Html.ValidationMessageFor(model => model.MatKhau)
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <input type="submit" value="ĐĂNG NHẬP" class="btn btn-default" />
                    </div>
                </div>
            </div>
        }
    </div>
}
