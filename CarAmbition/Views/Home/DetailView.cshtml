@using CarAmbition.Models;
@model BanTin
@{
    Layout = "~/Views/UserLayout/UserLayout.cshtml";
    ViewBag.Title = "DetailView";
}
@section tab {
    <style>
        #slider {
            display: none;
        }

        .main-content {
            float: left;
            width: 68%;
            display: inline-block;
            margin-left: 75px;
        }

        .title {
            color: #04470c;
        }

        .car-info {
            border-left: 1px solid #ddd;
            border-right: 1px solid #ddd;
            border-bottom: 1px solid #ddd;
            border-radius: 0px 0px 5px 5px;
            padding-bottom: 14px;
            margin-top: 1%;
        }

        #auto-tab {
            float: left;
            width: 68%;
            display: inline-block;
        }

        .info {
            float: right;
            display: inline-block;
            margin-right: 10px;
        }

        .fixheightinfo {
            border: 1px solid #ddd;
        }

        #title {
            padding-bottom: 100px;
            margin-left: 75px;
        }

        #hinhanh a {
            color: #04470c;
        }

        .base-info {
            border: 1px solid #ddd;
            padding-bottom: 110px;
            margin-left: 1%;
            margin-right: 1%;
        }

        .left-col {
            float: left;
            width: 48%;
        }

        .left-col1 {
            float: left;
        }

        .right-col1 {
            float: right;
        }

        .right-col {
            float: right;
            width: 48%;
        }

        .left-col2 {
            float: left;
        }

        .right-col2 {
            float: right;
        }

        .description {
            display: inline-block;
            margin-left: 1%;
            margin-right: 1%;
            border: 1px solid #ddd;
            padding-bottom: 5px;
        }

            .description p {
                margin-top: 6px;
                margin-left: 1%;
            }

        .title-box {
            margin-left: 1%;
        }

        .rowitem {
            margin-left: 10px;
            margin-right: 10px;
        }

        .contact {
            display: inline-block;
            border: 1px solid #ddd;
            margin-top: 15px;
            padding-left: 10px;
            padding-right: 2px;
        }

        .full-name, .phone, .address {
            margin-left: 3%;
        }

        .nivo-controlNav {
            background: url("/Content/Image/tranfer.png");
            display: block;
        }
    </style>
    <div class="main-content">
        <div class="title">
            <h2>@Model.TieuDe</h2>
            <ul class="nav nav-tabs" id="tab">
                <li class="active" id="hinhanh"><a href="#image">Hình ảnh</a></li>
            </ul>
        </div>
        <div class="car-info">
            <div class="img">
                <div class="tab-content" id="auto-tab">
                    <div id="image" class="tab-pane fade in active">
                        <div id="slider1" class="nivoSlider">
                            @{foreach (var item in Model.Xe.ChiTietHinhs)
                            {
                                <img src="~/Content/@item.HinhTo" alt="" data-thumb="/Content/@item.HinhNho" />
                            }
                            }
                        </div>
                    </div>
                </div>
                <div class="info">
                    <div class="fixheightinfo">
                        <div class="rowitem">
                            <label class="name">Giá bán</label>
                            @{
                                if (@Model.Xe.DonVi == true)
                                { <span class="content">: @Model.Xe.GiaBan Triệu VNĐ </span>}
                                else
                                { <span class="content">: @Model.Xe.GiaBan USD </span>}
                            }
                        </div>
                        <div class="rowitem">
                            <label class="name">Tình trạng</label>
                            @{
                                if (@Model.Xe.TinhTrang == true)
                                { <span class="content">: Mới</span>}
                                else
                                { <span class="content">: Cũ</span>}
                            }
                        </div>
                        <div class="rowitem">
                            <label class="name">Xuất xứ</label>
                            <span class="content">: @Model.Xe.XuatXu</span>
                        </div>
                        <div class="rowitem">
                            <label class="name">Kiểu dáng</label>
                            <span class="content">: @Model.Xe.DangXe</span>
                        </div>
                        <div class="rowitem">
                            <label class="name">Năm sản xuất</label>
                            <span class="content">: @Model.Xe.NamSanXuat</span>
                        </div>
                        <div class="rowitem">
                            <label class="name">Ngày đăng</label>
                            <span class="content">: @Model.NgayDang</span>
                        </div>
                        <div class="rowitem">
                            <label class="name">Mã tin</label>
                            <span class="content">: @Model.MaBanTin</span>
                        </div>
                    </div>
                    <div style="clear:both"></div>
                    <div class="contact">
                        <div class="title-box">
                            <h3>Thông tin người bán</h3>
                        </div>
                        <hr />
                        <div class="full-name">
                            <label class="name">Tên người bán</label>
                            <span class="content">: @Model.NguoiDung.HoTen</span>
                        </div>
                        <div class="phone">
                            <label class="name">Điện thoại</label>
                            <span class="content">: @Model.NguoiDung.DienThoai</span>
                        </div>
                        <div class="address">
                            <label class="name">Địa chỉ</label>
                            <span class="content">: @Model.NguoiDung.DiaChi</span>
                        </div>
                    </div>
                </div>
            </div>
            <div class="description">
                <div class="title-box">
                    <h3>Mô tả xe</h3>
                </div>
                <hr />
                <p class="descrip">
                    @Model.NoiDung
                </p>
            </div>
            <div class="base-info">
                <div class="title-box">
                    <h3>Thông số cơ bản</h3>
                </div>
                <hr />
                <div class="left-col">
                    <div class="left-col1">
                        <div class="rowitem">
                            <label class="name">Số Km đã đi</label>
                        </div>
                        <div class="rowitem">
                            <label class="name">Số cửa</label>
                        </div>
                        <div class="rowitem">
                            <label class="name">Số ghế</label>
                        </div>
                        <div class="rowitem">
                            <label class="name">Hộp số</label>
                        </div>
                    </div>
                    <div class="right-col1">
                        <div class="rowitem">
                            <label class="content">: @Model.Xe.SoKm</label>
                        </div>
                        <div class="rowitem">
                            <label class="content">: @Model.Xe.SoCua</label>
                        </div>
                        <div class="rowitem">
                            <label class="content">: @Model.Xe.SoCho</label>
                        </div>
                        <div class="rowitem">
                            <label class="content">: @Model.Xe.HopSo</label>
                        </div>
                    </div>
                </div>
                <div class="right-col">
                    <div class="left-col2">
                        <div class="rowitem">
                            <label class="name">Dẫn động</label>
                        </div>
                        <div class="rowitem">
                            <label class="name">Nhiên liệu</label>
                        </div>
                        <div class="rowitem">
                            <label class="name">Màu ngoại thất</label>
                        </div>
                        <div class="rowitem">
                            <label class="name">Màu nội thất</label>
                        </div>

                    </div>
                    <div class="right-col2">
                        <div class="rowitem">
                            <label class="content">: @Model.Xe.DanDong</label>
                        </div>
                        <div class="rowitem">
                            <label class="content">: @Model.Xe.NhienLieu</label>
                        </div>
                        <div class="rowitem">
                            <label class="content">: @Model.Xe.MauNgoaiThat</label>
                        </div>
                        <div class="rowitem">
                            <label class="content">: @Model.Xe.MauNoiThat</label>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <script type="text/javascript">
        $(window).load(function () {
            $('#slider1').nivoSlider({
                prevText: '',
                nextText: '',
                pauseTime: 10000,
                controlNavThumbs: true,

            });
        });
    </script>
}

@section banner {
    <style>
        .ad-banner {
            float: right;
            width: 25%;
            display: inline-block;
            position: relative;
        }
    </style>
    <div class="ad-banner">
        <a href="#" target="_blank" rel="nofollow">
            <img src="~/Content/Image/ChevroletGiaiPhong_SlideLeftDown_isHome_100x300_DungNT5.gif" />
        </a>
        <a href="#" target="_blank" rel="nofollow">
            <img src="~/Content/Image/A1_ChevroletHaNoi_isHome_100x300_DungNt5.gif" />
        </a>
        <a href="#" target="_blank" rel="nofollow">
            <img src="~/Content/Image/ToyotaCauDien_SlideRightUp_Home_100x300.gif" />
        </a>
        <br />
        <a href="#" target="_blank" rel="nofollow">
            <img src="~/Content/Image/E2_KiaBienHoa_isHome_300x250_QuynhDTT.gif" />
        </a>
    </div>
}